<h1>Editing Book</h1>

<div class="edit_field">
  <h4>Title</h4>
    <%= form_with model: @book do |f| %>
    <%= f.text_field :title %>
</div>

<div class="edit_area">
  <h4>Body</h4>
    <%= f.text_area :body %>
</div>

<div class="update">
  <%= f.submit 'Update Book' %>
</div>
  
    <%= link_to "Show", "/books/#{@book.id}" %>
    |
    <%= link_to "Back", "/books" %>

    <% end %>
