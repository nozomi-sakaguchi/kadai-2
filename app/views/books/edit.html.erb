<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being update:
  <% end %>


<%= form_with model: @book do |f| %>
  <div class="edit_field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>

  <div class="edit_area">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>

  <div class="update">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

